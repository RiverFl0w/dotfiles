set nowrap        " prevent break line
set colorcolumn=80

set backspace=2   " Backspace deletes like most programs in insert mode
set nobackup
set nowritebackup
set noswapfile
set history=50
set ruler         " show the cursor position all the time
set showcmd       " display incomplete commands
set incsearch     " do incremental searching
set laststatus=2  " Always display the status line
set autowrite     " Automatically :write before running commands

set autoindent
set smartindent

set autoread
set autowrite

set clipboard=unnamedplus
set surround

" Show relative number line by default
set number relativenumber

" return to normal mode
inoremap jk <ESC>
vnoremap ii <ESC>

" prevent yank jump back
" vnoremap y ygv<ESC>

" replace
nnoremap <C-A-h> :%s//g<left><left>

" Remove highlight
nnoremap <C-h> :nohl<CR>

" prevent cut or copy of some key
vnoremap c "_c
vnoremap x "_x
nnoremap x "_x
nnoremap c "_c
nnoremap D "_D
nnoremap C "_C

" insert ; to end line
inoremap <S-CR> <ESC><S-A>;
nnoremap <S-CR> <S-A>;<ESC>


" move in insert and command mode
inoremap <C-h> <Left>
inoremap <C-j> <Down>
inoremap <C-k> <Up>
inoremap <C-l> <Right>
cnoremap <C-h> <Left>
cnoremap <C-j> <Down>
cnoremap <C-k> <Up>
cnoremap <C-l> <Right>

" W to save file
cabb W w
cabb Q q

" move line
nnoremap <A-j> :m +1<CR>==
nnoremap <A-k> :m -2<CR>==
vnoremap <A-j> :m '>+1<CR>gv=gv
vnoremap <A-k> :m '<-2<CR>gv=gv
inoremap <A-j> <Esc>:m .+1<CR>==gi
inoremap <A-k> <Esc>:m .-2<CR>==gi

" prevent 'q + :'
nnoremap q: <CR>

" switch tab
nnoremap <A-1> 1gt
nnoremap <A-2> 2gt
nnoremap <A-3> 3gt
nnoremap <A-4> 4gt
nnoremap <A-5> 5gt
nnoremap <A-6> 6gt
nnoremap <A-7> 7gt
nnoremap <A-8> 8gt
nnoremap <A-9> 9gt

command FixKey :!killall -9 ibus-x11
